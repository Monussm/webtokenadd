<div class="container">
    <div class="row">
            <table>
            <tr>
                <th>Student Name</th>
                <th>Student Rollno</th>
                <th>Class</th>
                <th>Absent</th>
                <th>Present</th>
            </tr>
            </div>
            <div class="row">
            {{#each data}}
            <form action="/attendance" method="post">
            <tr>
               <td><input class="inputoutline text-center" style="height: 40px;" type="text" name="name" value={{name}}></td>
               <td><input class="inputoutline text-center" style="height: 40px;" type="text" name="rollno" value={{rollno}}></td>
               <td><input class="inputoutline text-center" style="height: 40px;" type="text" name="class" value={{class}}></td>
               <td><input class="inputoutline text-center" style="height: 40px;" type="radio" name="radio" value="absent"></td>
               <td><input class="inputoutline text-center" style="height: 40px;" type="radio" name="radio" value="present"></td>
               <td><button class="buttonlogin mt-2" type="submit" style="width: 100%;">Click</button></td>
               <td><p class="mt-3 ms-2">{{error}}</p></td>
            </tr>
            </form>
            
            {{/each}}
        </table>
    </div>
</div>